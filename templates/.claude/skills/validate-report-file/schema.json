{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Report File Schema",
  "type": "object",
  "required": ["header", "executiveSummary", "validationResults", "nextSteps"],
  "properties": {
    "header": {
      "type": "object",
      "required": ["title", "generated", "status", "version"],
      "properties": {
        "title": {
          "type": "string",
          "pattern": "^# .+ Report: .+"
        },
        "generated": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["‚úÖ success", "‚ö†Ô∏è partial", "‚ùå failed", "üîÑ in_progress"]
        },
        "version": {
          "type": "string"
        }
      }
    },
    "executiveSummary": {
      "type": "object",
      "required": ["heading", "content"],
      "properties": {
        "heading": {
          "const": "## Executive Summary"
        },
        "content": {
          "type": "string",
          "minLength": 10
        }
      }
    },
    "validationResults": {
      "type": "object",
      "required": ["heading", "overall"],
      "properties": {
        "heading": {
          "const": "## Validation Results"
        },
        "overall": {
          "type": "string",
          "enum": ["‚úÖ PASSED", "‚ö†Ô∏è PARTIAL", "‚ùå FAILED"]
        }
      }
    },
    "nextSteps": {
      "type": "object",
      "required": ["heading", "items"],
      "properties": {
        "heading": {
          "const": "## Next Steps"
        },
        "items": {
          "type": "array",
          "minItems": 1
        }
      }
    }
  }
}
